# ============================================
# OLLAMA LOCAL (Camada 1 - 85%)
# Prioridade para código
# ============================================
OLLAMA_BASE_URL=http://localhost:11434

# Modelo principal: CÓDIGO
OLLAMA_CODER_MODEL=deepseek-coder-v2:16b
OLLAMA_CODER_NUM_CTX=8192
OLLAMA_CODER_TEMPERATURE=0.1
OLLAMA_CODER_NUM_PREDICT=2048
OLLAMA_CODER_KEEP_ALIVE=30m

# Modelo secundário: TEXTO/DOC
OLLAMA_INSTRUCT_MODEL=llama3.1:8b-instruct-q5_K_M
OLLAMA_INSTRUCT_NUM_CTX=4096
OLLAMA_INSTRUCT_TEMPERATURE=0.15
OLLAMA_INSTRUCT_NUM_PREDICT=512

# Configs gerais Ollama
OLLAMA_TOP_P=0.9
OLLAMA_REPEAT_PENALTY=1.05
OLLAMA_SEED=42

# ============================================
# OPENAI CODEX / CLOUD (Camadas 2-4)
# ============================================
# ATENÇÃO: substitua pelos seus valores reais
OPENAI_API_KEY_TIER2=sk
OPENAI_PROJECT=proj_
OPENAI_BASE_URL=https://api.openai.com/v1
ENABLE_OPENAI_FALLBACK=1
OPENAI_TIMEOUT_SEC=30

# Modelos por complexidade de código (nomes reais da API OpenAI)
OPENAI_CODE_MINI=gpt-4o-mini
OPENAI_CODE_STANDARD=gpt-4o
OPENAI_CODE_REASONING=o3-mini
OPENAI_CODE_ELITE=o3

# ============================================
# ROTEAMENTO INTELIGENTE POR COMPLEXIDADE
# ============================================
ROUTING_STRATEGY=code_complexity_based
ENABLE_CODE_COMPLEXITY_DETECTION=1

CODE_SMALL_MAX_LINES=200
CODE_MEDIUM_MAX_LINES=500
CODE_LARGE_MAX_LINES=1500
CODE_XLARGE_MAX_LINES=5000

LOCAL_MAX_LATENCY_MS=6000
CODEX_MINI_MAX_LATENCY_MS=10000
CODEX_MAX_LATENCY_MS=20000

ENABLE_LOCAL_ERROR_FALLBACK=1
ENABLE_AUTO_TIER_UPGRADE=1

# ============================================
# PROTEÇÕES DE CUSTO (Cost Guard)
# ============================================
ENABLE_COST_PROTECTION=1
ENABLE_COST_ALERTS=1

MAX_COST_PER_QUERY_MINI_USD=0.10
MAX_COST_PER_QUERY_STANDARD_USD=0.50
MAX_COST_PER_QUERY_REASONING_USD=1.00
MAX_COST_PER_QUERY_ELITE_USD=5.00

DAILY_BUDGET_USD=20
WEEKLY_BUDGET_USD=100
MONTHLY_BUDGET_USD=300

DAILY_QUOTA_CODEX_MINI=100
DAILY_QUOTA_CODEX=30
DAILY_QUOTA_O3_MINI=10
DAILY_QUOTA_O3=3

# ============================================
# MODO ESPECIAL: HIGH QUALITY CODE
# ============================================
ENABLE_HIGH_QUALITY_MODE=0
HIGH_QUALITY_PRIMARY_MODEL=o3
HIGH_QUALITY_FALLBACK_MODEL=o3-mini
HIGH_QUALITY_SKIP_LOCAL=1
HIGH_QUALITY_MAX_COST_USD=10.00

# ============================================
# LOGS E MÉTRICAS
# ============================================
LOG_LEVEL=INFO
ENABLE_ROUTING_METRICS=1
ENABLE_COST_TRACKING=1
ENABLE_PERFORMANCE_TRACKING=1
TRACK_COST_PER_MODEL=1
TRACK_LATENCY_PER_TIER=1

# ============================================
# RETRY E RESILIÊNCIA
# ============================================
ENABLE_AUTOMATIC_FALLBACK=1
RETRY_ATTEMPTS=2
RETRY_BACKOFF_SEC=2
ENABLE_CIRCUIT_BREAKER=1
